# Backend Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PORT=8080
WEBSOCKET_TOKEN=
USE_MOCK_DATA=true
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Kafka Configuration - Use the service name of your Kafka broker
KAFKA_BROKER_ADDRESS=broker:29092
KAFKA_TOPIC=flights
KAFKA_GROUP_ID=flight-websocket-group
KAFKA_BATCH_SIZE=1
KAFKA_BATCH_TIMEOUT=10
KAFKA_MAX_ATTEMPTS=3
KAFKA_WRITE_TIMEOUT=10
KAFKA_READ_TIMEOUT=10
KAFKA_MAX_MESSAGE_SIZE=10485760
KAFKA_RETRY_INTERVAL=5
KAFKA_MAX_RETRIES=3
KAFKA_FAIL_FAST=false

# Redis Configuration - Use the service name
REDIS_URL=redis:6379  # Changed from localhost

# Performance Configuration
MAX_DISPLAY_FLIGHTS=100
CLUSTER_DISTANCE=0.1
MESSAGE_BATCH_SIZE=50